{
  "typeName": "AWS::Kendra::Index",
  "description": "A Kendra Index",
  "sourceUrl": "https://docs.aws.amazon.com/kendra/latest/dg/hiw-index.html",
  "properties": {
    "Id": {
      "description": "Unique ID of Index",
      "type": "string",
      "minLength": 36,
      "maxLength": 36,
      "pattern": "[a-zA-Z0-9][a-zA-Z0-9-]*"
    },
    "Name": {
      "description": "Name of Index",
      "type": "string",
      "minLength": 1,
      "maxLength": 1000,
      "pattern": "[a-zA-Z0-9][a-zA-Z0-9_-]*"
    },
    "RoleArn": {
      "description": "Role Arn",
      "type": "string",
      "minLength": 1,
      "maxLength": 1284,
      "pattern": "arn:[a-z0-9-\\.]{1,63}:[a-z0-9-\\.]{0,63}:[a-z0-9-\\.]{0,63}:[a-z0-9-\\.]{0,63}:[^/].{0,1023}"
    },
    "Edition": {
      "description": "Edition of Index",
      "type": "string",
      "enum": [
        "DEVELOPER_EDITION",
        "ENTERPRISE_EDITION"
      ]
    }
  },
  "required": [
    "Name",
    "RoleArn",
    "Edition"
  ],
  "handlers": {
    "create": {
      "permissions": [
        "kendra:CreateIndex",
        "kendra:DescribeIndex",
        "iam:PassRole"
      ]
    },
    "read": {
      "permissions": [
        "kendra:DescribeIndex"
      ]
    },
    "update": {
      "permissions": [
        "kendra:DescribeIndex",
        "kendra:UpdateIndex"
      ]
    },
    "delete": {
      "permissions": [
        "kendra:DescribeIndex",
        "kendra:DeleteIndex"
      ]
    },
    "list": {
      "permissions": [
        "kendra:ListIndices"
      ]
    }
  },
  "additionalProperties": false,
  "primaryIdentifier": [
    "/properties/Id"
  ],
  "readOnlyProperties": [
    "/properties/Id"
  ],
  "createOnlyProperties": [
    "/properties/Edition"
  ]
}
